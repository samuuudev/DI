<Page x:Class="Mariposa.SimpleButterfly"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SimpleButterfly">

    <Canvas Width="300" Height="200" Background="LightGray">
        <!-- Alas izquierdas -->
        <Ellipse Width="120" Height="80"
                 Canvas.Left="40" Canvas.Top="86"
                 Fill="#FFB3E5FC" StrokeThickness="2"
                 RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Ellipse.RenderTransform>
                <RotateTransform Angle="-20"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <!-- Alas derechas -->
        <Ellipse Width="120" Height="80"
                 Canvas.Left="140" Canvas.Top="86"
                 Fill="#FFF8BBD0" RenderTransformOrigin="0.5,0.5" 
                 HorizontalAlignment="Center" VerticalAlignment="Top">
            <Ellipse.RenderTransform>
                <RotateTransform Angle="20"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <!-- Cuerpo -->

        <!-- Cabeza -->

        <!-- Antenas -->

        <!-- Ojos -->
        <Ellipse Width="4" Height="4" Fill="White" Canvas.Left="146" Canvas.Top="50"/>
        <Ellipse Width="4" Height="4" Fill="White" Canvas.Left="156" Canvas.Top="50"/>
        <Ellipse Width="120" Height="80"
            Canvas.Left="38" Canvas.Top="22"
            Fill="#FFB3E5FC" StrokeThickness="2"
            RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-201.288"/>
                    <TranslateTransform X="100.018" Y="-1.125"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Width="119" Height="80"
            Canvas.Left="139" Canvas.Top="22"
            Fill="#FFF8BBD0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-161.288"/>
                    <TranslateTransform X="-100.957" Y="1.135"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Rectangle Width="18" Height="103"
                   RadiusX="9" RadiusY="9"
                   Canvas.Left="141" Canvas.Top="60"
                   Fill="#FF37474F" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Ellipse Width="22" Height="22"
                 Canvas.Left="139" Canvas.Top="44"
                 Fill="#FF37474F"/>

        <!-- Detalles -->
    </Canvas>
</Page>
