<Window x:Class="DatePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatePicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Selecciona una fecha:" FontSize="16" Margin="0,0,0,10"/>
            <DatePicker Name="dpFecha" Width="200" SelectedDateFormat="Short"/>
            <Button Content="Mostrar Fecha Seleccionada" Width="200" Margin="0,10,0,0" Click="BtnMostrarFecha_Click"/>
        </StackPanel>
    </Grid>
</Window>
