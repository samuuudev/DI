<Window x:Class="aceptasreto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aceptasreto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="1" TabStripPlacement="Left" Name="tbCtrl_Tab">
            <TabItem Header="PARTICIPANTES">
                <Grid Background="#FFE5E5E5">
                    <TabControl>
                        <TabItem Header="ALUMNADO">
                            <Grid Name="gdContenedorPrinAlum" Background="#FFE5E5E5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>


                                <TextBox x:Name="txtBoxBuscador" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Search" VerticalAlignment="Center" Width="300" Height="35"/>

                                <DataGrid x:Name="dgAlumnos" Grid.Row="1" Margin="10,10,10,10">

                                </DataGrid>

                                <Label x:Name="lbAlumnadoCRUD" Content="ALUMNADO" Grid.Row="1" Grid.Column="1" Width="200"/>
                                <StackPanel x:Name="stpAlumnadoCRUD" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Label x:Name="lbNombreCRUD" Content="Nombre: " />
                                    <TextBox x:Name="txtBoxNombreCRUD" Width="200" Height="25" />
                                    <Label x:Name="lbApellidoCRUD" Content="Apellido: " />
                                    <TextBox x:Name="txtBoxApellidoCRUD" Height="25"/>
                                    <Label x:Name="lbCursoCRUD" Content="Curso: " />
                                    <Slider x:Name="sldBoxCursoCRUD" />
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button Grid.Column="0" Margin="10" Content="Agregar" Name="btn_AgregarDatos" Click="btn_AgregarDatos_Click" Width="100" Height="30"/>
                                    <Button Grid.Column="1" Margin="10" Content="Modifcar" Name="btn_ModificarDatos" Click="btn_ModificarDatos_Click" Width="100" Height="30"/>
                                    <Button Grid.Column="2" Margin="10" Content="Eliminar" Name="btn_EliminarDatos" Click="btn_EliminarDatos_Click" Width="100" Height="30" BorderBrush="#FF707070"/>
                                </StackPanel>

                            </Grid>
                        </TabItem>
                        <TabItem Header="GRUPOS">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>


                </Grid>
            </TabItem>
            <TabItem Header="EMPRESAS">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Retos">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TALENT LAB">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="USUARIOS">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Label Content="¿ACEPTAS EL RETO?" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Center" FontSize="22"/>


    </Grid>
</Window>
