<Window x:Class="DataBindingEjercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingEjercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Slider Name="fontSlider" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Maximum="50" LargeChange="2"/>

        <TextBlock x:Name="textTeextVariations" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Text="Esto es un ejemplo de binding" 
                   TextWrapping="Wrap" FontWeight="Bold" Width="auto" Height="auto"
                   FontSize="{Binding ElementName=fontSlider, Path=Value, Mode=TwoWay}"
                   FontFamily="{Binding ElementName=lstBoxFuentes, Path=SelectedItem}"
                   Foreground="{Binding ElementName=lstBoxColorText, Path=SelectedItem.Content}" />

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSizePequenio" Grid.Row="0" Grid.Column="0" Content="Pequeño" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40,5,5,5"/>
            <Button x:Name="btnSizeMediano" Grid.Row="0" Grid.Column="0" Content="Mediano" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,5,5,5"/>
            <Button x:Name="btnSizeGrande" Grid.Row="0" Grid.Column="0" Content="Grande" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,5,40,5"/>

            <TextBlock Name="txtBlockTamanioExacto" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="Tamaño de Fuente"/>

            <TextBox Name="txtBoxTamanioExacto" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" TextAlignment="Center"/>

            <ListBox x:Name="lstBoxColorText" Grid.Row="0" Grid.Column="1" FontSize="16">
                <ListBoxItem Content="Black" IsSelected="True"/>
                <ListBoxItem Content="Red"/>
                <ListBoxItem Content="Green"/>
                <ListBoxItem Content="Blue"/>
                <ListBoxItem Content="Orange"/>
            </ListBox>

            <ListBox x:Name="lstBoxFuentes" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ListBoxItem>Arial</ListBoxItem>
                <ListBoxItem>Calibri</ListBoxItem>
                <ListBoxItem>Comic Sans MS</ListBoxItem>
                <ListBoxItem>Courier New</ListBoxItem>
                <ListBoxItem>Georgia</ListBoxItem>
                <ListBoxItem>Times New Roman</ListBoxItem>
                <ListBoxItem>Verdana</ListBoxItem>
            </ListBox>

        </Grid>
    </Grid>
</Window>
