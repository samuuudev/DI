<Window x:Class="DataGridPersonas25_26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGridPersonas25_26"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="contenedorPrincipal">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3.5*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1" TabStripPlacement="Left" Name="tbCtrl_Tab">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" Name="grd_ContenedorSuperior">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Name="grd_ContenedorDatos">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="20" Orientation="Vertical" Grid.Column="0" Name="stkp_PanelIntroducirDatos">
                            <Label Content="Nombre: " HorizontalAlignment="Center" Margin="1" Name="lb_DatosNombre"/>
                            <TextBox Margin="0,2,0,2" Height="25" Width="230" Name="txtBox_DatosNombre"/>

                            <Label Content="Apellido: " HorizontalAlignment="Center" Margin="1" Name="lb_DatosApellido"/>
                            <TextBox Margin="0,2,0,2" Width="230" Height="25" Name="txtBox_DatosApellido"/>

                            <Label Content="Edad: " HorizontalAlignment="Center" Margin="1" Name="lb_DatosEdad"/>
                            <TextBox Margin="0,2,0,2" Width="230" Height="25" Name="txtBox_DatosEdad"/>
                        </StackPanel>

                        <DataGrid x:Name="dgv_Personas" d:ItemsSource="{d:SampleData ItemCount = 5}" Grid.Row="0" Grid.Column="1" Margin="0,15,10,20" SelectionChanged="dgv_Personas_SelectionChanged" />

                    </Grid>

                    <Grid Grid.Row="1" Margin="20" Name="grd_ContenedorInferior">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Margin="10" Content="Agregar" Name="btn_AgregarDatos" Click="btn_AgregarDatos_Click"/>
                        <Button Grid.Column="1" Margin="10" Content="Modifcar" Name="btn_ModificarDatos" Click="btn_ModificarDatos_Click"/>
                        <Button Grid.Column="2" Margin="10" Content="Eliminar" Name="btn_EliminarDatos" Click="btn_EliminarDatos_Click"/>


                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
