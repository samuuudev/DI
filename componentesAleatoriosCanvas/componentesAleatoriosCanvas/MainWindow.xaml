<Window x:Class="componentesAleatoriosCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:componentesAleatoriosCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="contenedor">
            
        </Canvas>

        <DockPanel>
            <Button Content="BTN 1" DockPanel.Dock="Top"/>
            <Button Content="BTN 2" DockPanel.Dock="Bottom"/>
            <Label Content="Etiqueta" DockPanel.Dock="Left"/>
            <TextBox Text="Caja de texto" DockPanel.Dock="Right"/>
            <RadioButton Content="Opción" Width="100"/>
        </DockPanel>


        <WrapPanel Name="contenedor2" Orientation="Vertical">
            <Button Content="BTN 1" DockPanel.Dock="Top"/>
            <Button Content="BTN 2" DockPanel.Dock="Bottom"/>
            <Label Content="Etiqueta" DockPanel.Dock="Left"/>
            <TextBox Text="Caja de texto" DockPanel.Dock="Right"/>
            <RadioButton Content="Opción" Width="100"/>
        </WrapPanel>
    </Grid>
</Window>
